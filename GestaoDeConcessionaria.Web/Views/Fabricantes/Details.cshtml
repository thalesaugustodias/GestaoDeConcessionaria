@model GestaoDeConcessionaria.Web.Models.FabricanteViewModel
@{
    ViewData["Title"] = "Detalhes do Fabricante";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-industry mr-2"></i>
                    Detalhes do Fabricante
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Voltar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>
                        Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1"></i>
                            Informações do Fabricante
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-building"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Nome</span>
                                        <span class="info-box-number">@Model.Nome</span>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-globe-americas"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">País de Origem</span>
                                        <span class="info-box-number">@Model.PaisOrigem</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Ano de Fundação</span>
                                        <span class="info-box-number">@Model.AnoFundacao</span>
                                        <span class="info-box-text text-muted">
                                            @(DateTime.Now.Year - Model.AnoFundacao) anos de história
                                        </span>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-link"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Website</span>
                                        <span class="info-box-number">
                                            <a href="@Model.Website" target="_blank" class="text-primary">
                                                @Model.Website
                                                <i class="fas fa-external-link-alt ml-1"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="callout callout-info">
                                    <h5>
                                        <i class="fas fa-info"></i>
                                        Informações Adicionais
                                    </h5>
                                    <p>ID do Fabricante: <strong>@Model.Id</strong></p>
                                    <p class="mb-0">
                                        Este fabricante foi cadastrado em nosso sistema e suas informações
                                        podem ser utilizadas para registro de veículos e controle de vendas.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}