@model IEnumerable<GestaoDeConcessionaria.Web.Models.VendaViewModel>
@{
    ViewData["Title"] = "Vendas";

    var veiculos = (IEnumerable<GestaoDeConcessionaria.Web.Models.VeiculoViewModel>)ViewBag.Veiculos;
    var concessionarias = (IEnumerable<GestaoDeConcessionaria.Web.Models.ConcessionariaViewModel>)ViewBag.Concessionarias;
    var clientes = (IEnumerable<GestaoDeConcessionaria.Web.Models.ClienteViewModel>)ViewBag.Clientes;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-shopping-cart mr-2"></i>
                    Vendas
                </h1>
            </div>
            <div class="col-sm-6">
                <a asp-action="Create" class="btn btn-primary float-right">
                    <i class="fas fa-plus mr-1"></i>
                    Cadastrar
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Histórico de Vendas</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <input type="text" id="searchInput" class="form-control" placeholder="Pesquisar venda...">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 80px">ID</th>
                            <th>Veículo</th>
                            <th>Concessionária</th>
                            <th>Cliente</th>
                            <th class="text-center">Data</th>
                            <th class="text-right">Valor</th>
                            <th class="text-center" style="width: 100px">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <span class="badge badge-info">
                                        #@item.Id.ToString("D6")
                                    </span>
                                </td>
                                <td>
                                    <i class="fas fa-car mr-1"></i>
                                    @(veiculos?.FirstOrDefault(v => v.Id == item.VeiculoId)?.Modelo ?? "N/A")
                                    <small class="text-muted">
                                        (ID: @item.VeiculoId)
                                    </small>
                                </td>
                                <td>
                                    <i class="fas fa-building mr-1"></i>
                                    @(concessionarias?.FirstOrDefault(c => c.Id == item.ConcessionariaId)?.Nome ?? "N/A")
                                </td>
                                <td>
                                    <i class="fas fa-user mr-1"></i>
                                    @(clientes?.FirstOrDefault(c => c.Id == item.ClienteId)?.Nome ?? "N/A")
                                </td>
                                <td class="text-center">
                                    <i class="fas fa-calendar mr-1"></i>
                                    @item.DataVenda.ToString("dd/MM/yyyy")
                                    <br />
                                    <small class="text-muted">
                                        @item.DataVenda.ToString("HH:mm")
                                    </small>
                                </td>
                                <td class="text-right">
                                    <strong class="text-success">
                                        @item.PrecoVenda.ToString("C")
                                    </strong>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-success btn-sm" title="Imprimir Comprovante"
                                                onclick="imprimirComprovante(@item.Id)">
                                            <i class="fas fa-print"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <div class="float-left">
                    <small class="text-muted">
                        Total de vendas: <strong>@Model.Count()</strong> |
                        Valor total: <strong>@Model.Sum(v => v.PrecoVenda).ToString("C")</strong>
                    </small>
                </div>
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" href="#">«</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            $('[title]').tooltip();
        });
        function imprimirComprovante(id) {
            window.open(`/Vendas/Comprovante/${id}`, '_blank');
        }
    </script>
}