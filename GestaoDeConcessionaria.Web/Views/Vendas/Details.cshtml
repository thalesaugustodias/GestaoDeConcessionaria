@model GestaoDeConcessionaria.Web.Models.Vendas.VendaDetalhesViewModel
@{
    ViewData["Title"] = "Detalhes da Venda";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-shopping-cart mr-2"></i>
                    Detalhes da Venda
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Voltar
                    </a>                   
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1"></i>
                            Informações da Venda #@Model.Id
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-car"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Veículo</span>
                                        <span class="info-box-number">@ViewBag.VeiculoModelo</span>
                                        <span class="text-muted">ID: @Model.VeiculoId</span>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-building"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Concessionária</span>
                                        <span class="info-box-number">@ViewBag.ConcessionariaNome</span>
                                        <span class="text-muted">ID: @Model.ConcessionariaId</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Cliente</span>
                                        <span class="info-box-number">@ViewBag.ClienteNome</span>
                                        <span class="text-muted">ID: @Model.ClienteId</span>
                                    </div>
                                </div>

                                <div class="info-box bg-success">
                                    <span class="info-box-icon">
                                        <i class="fas fa-money-bill-wave"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Valor da Venda</span>
                                        <span class="info-box-number">@Model.PrecoVenda.ToString("C")</span>
                                        <span class="text-white">
                                            Realizada em @Model.DataVenda.ToString("dd/MM/yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="callout callout-info">
                                    <h5>
                                        <i class="fas fa-info-circle"></i>
                                        Detalhes da Transação
                                    </h5>
                                    <div class="timeline mt-3">
                                        <div>
                                            <i class="fas fa-clock bg-info"></i>
                                            <div class="timeline-item">
                                                <span class="time">
                                                    <i class="fas fa-calendar"></i>
                                                    @Model.DataVenda.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                                <h3 class="timeline-header">
                                                    Venda Realizada
                                                </h3>
                                                <div class="timeline-body">
                                                    Venda registrada no sistema com sucesso.
                                                    Protocolo: #@Model.ProtocoloVenda
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>