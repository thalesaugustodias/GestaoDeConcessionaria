@model IEnumerable<GestaoDeConcessionaria.Web.Models.VeiculoViewModel>
@{
    ViewData["Title"] = "Veículos";
    var fabricantes = (IEnumerable<GestaoDeConcessionaria.Web.Models.FabricanteViewModel>)ViewBag.Fabricantes;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-car mr-2"></i>
                    Veículos
                </h1>
            </div>
            <div class="col-sm-6">
                <a asp-action="Create" class="btn btn-primary float-right">
                    <i class="fas fa-plus mr-1"></i>
                    Cadastrar
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista de Veículos Cadastrados</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <input type="text" id="searchInput" class="form-control" placeholder="Pesquisar veículo...">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Veículo</th>
                            <th class="text-center">Tipo</th>
                            <th class="text-center">Ano</th>
                            <th class="text-right">Preço</th>
                            <th>Fabricante</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td>
                                    <i class="fas fa-car mr-1"></i>
                                    <strong>@item.Modelo</strong>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-info">
                                        @{
                                            var icon = item.Tipo.ToLower() switch
                                            {
                                                "carro" => "car",
                                                "moto" => "motorcycle",
                                                "caminhão" => "truck",
                                                "suv" => "truck-pickup",
                                                "van" => "shuttle-van",
                                                _ => "car-side"
                                            };
                                        }
                                        <i class="fas fa-@icon mr-1"></i>
                                        @item.Tipo
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-secondary">
                                        <i class="fas fa-calendar mr-1"></i>
                                        @item.AnoFabricacao
                                    </span>
                                </td>
                                <td class="text-right">
                                    <strong class="text-success">
                                        @item.Preco.ToString("C")
                                    </strong>
                                </td>
                                <td>
                                    <i class="fas fa-industry mr-1"></i>
                                    @(fabricantes?.FirstOrDefault(f => f.Id == item.FabricanteId)?.Nome ?? "N/A")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="javascript:void(0);" onclick="confirmarExclusao(@item.Id, '@item.Modelo', '@item.Preco.ToString("C")')"
                                           class="btn btn-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" href="#">«</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            $('[title]').tooltip();
        });

        function confirmarExclusao(id, modelo, preco) {
            Swal.fire({
                title: 'Confirmar Exclusão',
                html: `
                            <div class="text-left">
                                <p>Você está prestes a excluir o veículo:</p>
                                <div class="alert alert-info">
                                    <strong>${modelo}</strong><br>
                                    <small>Valor: ${preco}</small>
                                </div>
                                <p>Esta ação não poderá ser desfeita.</p>
                            </div>
                        `,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar',
                footer: '<small>O histórico de vendas relacionado será mantido no sistema</small>'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Excluindo...',
                        html: 'Por favor, aguarde...',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading()
                        }
                    });

                    $.post(`/Veiculos/Delete/${id}`)
                        .done(function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Excluído!',
                                    text: 'O veículo foi excluído com sucesso.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Erro!',
                                    text: response.message || 'Não foi possível excluir o veículo.',
                                    icon: 'error',
                                    footer: '<small>Verifique se não existem vendas pendentes</small>'
                                });
                            }
                        })
                        .fail(function () {
                            Swal.fire({
                                title: 'Erro!',
                                text: 'Ocorreu um erro ao excluir o veículo.',
                                icon: 'error',
                                footer: '<small>Verifique se não existem vendas vinculadas</small>'
                            });
                        });
                }
            });
        }
    </script>
}