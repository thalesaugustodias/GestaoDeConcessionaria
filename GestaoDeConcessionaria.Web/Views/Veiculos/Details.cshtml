@model GestaoDeConcessionaria.Web.Models.VeiculoViewModel
@{
    ViewData["Title"] = "Detalhes do Veículo";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-car mr-2"></i>
                    Detalhes do Veículo
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Voltar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>
                        Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1"></i>
                            Informações do Veículo
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-car"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Modelo</span>
                                        <span class="info-box-number">@Model.Modelo</span>
                                        <span class="text-muted">ID: @Model.Id</span>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Ano de Fabricação</span>
                                        <span class="info-box-number">@Model.AnoFabricacao</span>
                                        <span class="text-muted">@(DateTime.Now.Year - Model.AnoFabricacao) anos de uso</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-tag"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Preço</span>
                                        <span class="info-box-number">@Model.Preco.ToString("C")</span>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-truck"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Tipo do Veículo</span>
                                        <span class="info-box-number">@Model.Tipo</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            <i class="fas fa-file-alt mr-1"></i>
                                            Descrição do Veículo
                                        </h3>
                                    </div>
                                    <div class="card-body">
                                        <p>@Model.Descricao</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="callout callout-info">
                                    <h5>
                                        <i class="fas fa-industry"></i>
                                        Informações do Fabricante
                                    </h5>
                                    <p>
                                        ID do Fabricante: <strong>@Model.FabricanteId</strong><br />
                                        Nome: <strong>@(ViewBag.NomeFabricante ?? "Não especificado")</strong>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            <i class="fas fa-chart-line mr-1"></i>
                                            Informações Adicionais
                                        </h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3 col-sm-6">
                                                <div class="small-box bg-info">
                                                    <div class="inner">
                                                        <h3>0</h3>
                                                        <p>Visualizações</p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fas fa-eye"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-6">
                                                <div class="small-box bg-success">
                                                    <div class="inner">
                                                        <h3>0</h3>
                                                        <p>Interessados</p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fas fa-users"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>