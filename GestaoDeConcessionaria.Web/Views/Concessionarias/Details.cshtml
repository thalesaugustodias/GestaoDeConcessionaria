@model GestaoDeConcessionaria.Web.Models.ConcessionariaViewModel
@{
    ViewData["Title"] = "Detalhes da Concessionária";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-building mr-2"></i>
                    Detalhes da Concessionária
                </h1>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>
                        Voltar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>
                        Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle mr-1"></i>
                            Informações da Concessionária
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-store"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Nome da Concessionária</span>
                                        <span class="info-box-number">@Model.Nome</span>
                                        <small class="text-muted">ID: @Model.Id</small>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-map-marked-alt"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Endereço Completo</span>
                                        <span class="info-box-number">@Model.Rua</span>
                                        <span class="text-muted">
                                            @Model.Cidade - @Model.Estado
                                            <br />
                                            CEP: <span class="cep-format">@Model.CEP</span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-address-card"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Contato</span>
                                        <span class="info-box-number telefone-format">@Model.Telefone</span>
                                        <a href="mailto:@Model.Email" class="text-muted">
                                            <i class="fas fa-envelope mr-1"></i>
                                            @Model.Email
                                        </a>
                                    </div>
                                </div>

                                <div class="info-box bg-light">
                                    <span class="info-box-icon">
                                        <i class="fas fa-warehouse"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Capacidade da Concessionária</span>
                                        <span class="info-box-number">
                                            @Model.CapacidadeMaximaVeiculos
                                            <small>veículos</small>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="callout callout-info">
                                    <h5>
                                        <i class="fas fa-chart-bar"></i>
                                        Estatísticas da Concessionária
                                    </h5>
                                    <div class="row mt-3">
                                        <div class="col-md-3 col-sm-6 col-12">
                                            <div class="small-box bg-info">
                                                <div class="inner">
                                                    <h3>0</h3>
                                                    <p>Veículos em Estoque</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-car"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-6 col-12">
                                            <div class="small-box bg-success">
                                                <div class="inner">
                                                    <h3>0</h3>
                                                    <p>Vendas Realizadas</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-6 col-12">
                                            <div class="small-box bg-warning">
                                                <div class="inner">
                                                    <h3>0</h3>
                                                    <p>Clientes Atendidos</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-users"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-6 col-12">
                                            <div class="small-box bg-danger">
                                                <div class="inner">
                                                    <h3>0%</h3>
                                                    <p>Ocupação</p>
                                                </div>
                                                <div class="icon">
                                                    <i class="fas fa-chart-pie"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            var cep = $('.cep-format').text().trim();
            var cepFormatado = cep.replace(/(\d{5})(\d{3})/, "$1-$2");
            $('.cep-format').text(cepFormatado);
            var telefone = $('.telefone-format').text().trim();
            var telefoneFormatado = telefone.replace(/(\d{2})(\d{4})(\d{4})/, "($1) $2-$3");
            $('.telefone-format').text(telefoneFormatado);
        });
    </script>
}