@model GestaoDeConcessionaria.Web.Models.ClienteViewModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-user-edit mr-2"></i>
                    Editar Cliente
                </h1>
            </div>
            <div class="col-sm-6">
                <a asp-action="Index" class="btn btn-secondary float-right">
                    <i class="fas fa-arrow-left mr-1"></i>
                    Voltar
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="card-title">
                    <i class="fas fa-user mr-1"></i>
                    Editando Cliente #@Model.Id
                </h3>
            </div>
            <form asp-action="Edit" method="post" id="formCliente">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Nome">
                                    <i class="fas fa-user mr-1"></i>
                                    Nome Completo
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do cliente" />
                                </div>
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CPF">
                                    <i class="fas fa-id-card mr-1"></i>
                                    CPF
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-id-card"></i>
                                        </span>
                                    </div>
                                    <input asp-for="CPF" class="form-control cpf-mask" placeholder="000.000.000-00" />
                                </div>
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Telefone">
                                    <i class="fas fa-phone mr-1"></i>
                                    Telefone
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Telefone" class="form-control telefone-mask" placeholder="(00) 00000-0000" />
                                </div>
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times mr-1"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning" id="btnSalvar">
                            <i class="fas fa-save mr-1"></i>
                            Atualizar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.cpf-mask').mask('000.000.000-00');
            $('.telefone-mask').mask('(00) 00000-0000');

            $("#formCliente").on("submit", function() {
                if ($(this).valid()) {
                    $("#btnSalvar")
                        .prop("disabled", true)
                        .html('<i class="fas fa-spinner fa-spin mr-1"></i> Atualizando...');
                }
            });

            $.validator.addMethod("cpf", function(value, element) {
                value = value.replace(/[^\d]+/g,'');
                if (value == '') return false;
                if (value.length != 11) return false;

                var resto;
                var soma = 0;

                for (var i=1; i<=9; i++)
                    soma = soma + parseInt(value.substring(i-1, i)) * (11 - i);
                resto = (soma * 10) % 11;
                if ((resto == 10) || (resto == 11)) resto = 0;
                if (resto != parseInt(value.substring(9, 10))) return false;

                soma = 0;
                for (var i = 1; i <= 10; i++)
                    soma = soma + parseInt(value.substring(i-1, i)) * (12 - i);
                resto = (soma * 10) % 11;
                if ((resto == 10) || (resto == 11)) resto = 0;
                if (resto != parseInt(value.substring(10, 11))) return false;

                return true;
            }, "CPF inválido");

            $("#CPF").rules("add", {
                cpf: true,
                messages: {
                    cpf: "Por favor, informe um CPF válido"
                }
            });
        });
    </script>
}