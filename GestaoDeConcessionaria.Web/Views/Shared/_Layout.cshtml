<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Sistema de Gestão De Concessionárias De Veículos - SGC" />
    <title>SGC - Sistema de Gestão De Concessionárias De Veículos</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Dashboard/Index" class="nav-link">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">                
                <li class="nav-item">
                    <a class="nav-link" href="~/Account/Logout" title="Sair do Sistema">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="d-none d-sm-inline-block ml-1">Sair</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar">
            <a href="~/Dashboard/Index" class="brand-link text-center">
                <img src="~/dist/img/AdminLTELogo.png" alt="SGC Logo" class="brand-image elevation-3">
                <span class="brand-text font-weight-light">SGC</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a href="~/Fabricantes/Index" class="nav-link">
                                <i class="nav-icon fas fa-industry"></i>
                                <p>Fabricantes</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Veiculos/Index" class="nav-link">
                                <i class="nav-icon fas fa-car"></i>
                                <p>Veículos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Concessionarias/Index" class="nav-link">
                                <i class="nav-icon fas fa-building"></i>
                                <p>Concessionárias</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Clientes/Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Clientes</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Vendas/Index" class="nav-link">
                                <i class="nav-icon fas fa-shopping-cart"></i>
                                <p>Vendas</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; @DateTime.Now.Year SGC.</strong>
            <span class="ml-1">Todos os direitos reservados.</span>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>